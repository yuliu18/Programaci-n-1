#include <stdio.h>

int main() {
    int n;
    double pi = 2.0;
    double secuencia1 = 0;
    double secuencia2 = 0;
    int count = 0;

    printf("Introduzca el número de fracciones: ");
    scanf("%d", &n);

    while (n <= 0) {
        printf("Error. Introduzca el número de fracciones: ");
        scanf("%d", &n);
    }

    for (int i = 1; (count < n) && (i < n); i++)
    {
        secuencia1 = (double)(2 * i) / (2 * i - 1);
        pi = pi * secuencia1;
        count++;
        if (count == n)
            break;
        secuencia2 = (double)(2 * i) / (2 * i + 1);
        pi *= secuencia2;
        count++;
    }
    printf("El valor de PI con %d fracciones es: %.5f\n", n, pi);
}
